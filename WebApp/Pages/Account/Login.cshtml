@page
@model LoginModel

<div class="container border" style="padding: 20px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="Credential.Email"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Credential.Email" class="form-control">
                <span class="text-danger" asp-validation-for="Credential.Email"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="Credential.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="Credential.Password" class="form-control">
                <span class="text-danger" asp-validation-for="Credential.Password"></span></div>
        </div>

        <div class="mb-3 row form-check">
            <div class="col-2">
                <input type="checkbox" asp-for="Credential.RememberMe" class="form-check-input">
                <label class="form-check-label" asp-for="Credential.RememberMe"></label>
            </div>
        </div>

        <div class="mb-3 row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login"/>
            </div>
            <div class="col-5">
                <a href="/Account/Register" class="btn btn-link">Register</a>
            </div>
        </div>
        
        <p>
        Social Media Logins:
        </p>
        <div class="form-group">
            @foreach (var provider in Model.ExternalLogins)
            {
                <!-- Need to post it somewhere else -->
                <button type="submit" asp-page-handler="LoginExternally" name="provider" value="@provider.Name" class="btn btn-primary">Login with @provider.DisplayName</button>
            }
        </div>
    </form>
</div>